@using POC_Project.BL.Interface
@inject ICountry country
@inject IDepartment department
@model EmployeeVM

<label asp-for="Name">@SharedLocalizer["Name"]</label>
<input type="text" asp-for="Name" class="form-control" />
<span asp-validation-for="Name" class="text-danger"></span>
<br />

<label asp-for="Salary">@SharedLocalizer["Salary"]</label>
<input type="text" asp-for="Salary" class="form-control" />
<span asp-validation-for="Salary" class="text-danger"></span>
<br />

<label asp-for="Email">@SharedLocalizer["Email"]</label>
<input type="text" asp-for="Email" class="form-control" />
<span asp-validation-for="Email" class="text-danger"></span>
<br />

<label asp-for="Address">@SharedLocalizer["Address"]</label>
<input type="text" asp-for="Address" class="form-control" />
<span asp-validation-for="Address" class="text-danger"></span>
<br />

@*<select asp-for="DepartmentId" asp-items="(SelectList)ViewBag.DepartmentList" class="form-control">
        <option>Choose Department </option>
    </select>*@


<select asp-for="DepartmentId" class="form-control">
    <option>Choose Department </option>
    @foreach (var item in await department.GetAllAsync())
    {
        <option value="@item.Id">@item.Name</option>
    }
</select>
<br />


<label asp-for="HireDate">@SharedLocalizer["HireDate"]</label>
<input type="date" asp-for="HireDate" class="form-control" />
<span asp-validation-for="HireDate" class="text-danger"></span>
<br />

<select id="CountryList" class="form-control">
    <option>Choose Country</option>
    @foreach (var item in await country.GetCountries())
    {
        <option value="@item.ID">@item.Name</option>
    }
</select>
<br />

<select id="CityList" class="form-control">
    <option>Choose City</option>
</select>
<br />

<select asp-for="DistrictId" class="form-control">
    <option>Choose District</option>
</select>
<br />

<label asp-for="Image">Image</label>
<input type="file" asp-for="Image" class="form-control" />
<br />

<label asp-for="CV">CV</label>
<input type="file" asp-for="CV" class="form-control" />
<br />

<label asp-for="Notes">@SharedLocalizer["Notes"]</label>
<textarea rows="4" class="form-control" asp-for="Notes"></textarea>
<span asp-validation-for="Notes" class="text-danger"></span>
<br />



<input type="checkbox" asp-for="IsActive" checked="checked" />
<label asp-for="IsActive">@SharedLocalizer["IsActive"]</label>
<span asp-validation-for="IsActive" class="text-danger"></span>
<br />
