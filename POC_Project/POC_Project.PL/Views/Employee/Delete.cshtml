@model EmployeeVM

@{
    ViewData["Title"] = SharedLocalizer["Delete"];
    ViewData["NameOfTitle"] = SharedLocalizer["Delete"];
}

<div class="block-header">
   <h2>@SharedLocalizer["DeleteEmployee"]<span style="color:red">@Model.Name</span></h2>
</div>
<br />

<form asp-controller="Employee" asp-action="Delete" class="form-group">

    <input type="hidden" asp-for="Id"/>

    @{ await Html.RenderPartialAsync("~/Views/Partials/Employee/DetailsDelete.cshtml"); }
    <center>
    <input type="submit" value="@SharedLocalizer["Delete"]" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-success">@SharedLocalizer["Return"]</a>
    </center>
    <br />

</form>

